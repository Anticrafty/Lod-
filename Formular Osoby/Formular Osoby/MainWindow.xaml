<Window x:Class="Formular_Osoby.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Formular_Osoby"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="300" Background="LightGreen">
    <Grid>
        <Frame x:Name="NactenaStranka" ></Frame>
        <StackPanel HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" VerticalAlignment="Top" Width="270" Orientation="Horizontal">
            <Button x:Name="Zak" Content="Žák" Margin="5,0" Width="80" Background="LightGray" Click="Osoba_Click"/>
            <Button x:Name="Trida" Content="Třída" Margin="5,0" Width="80" Background="LightGray" Click="Trida_Click"/>
            <Button x:Name="Skola" Content="Škola" Margin="5,0" Width="80" Background="LightGray" Click="Skola_Click"/>
        </StackPanel>

    </Grid>
</Window>
